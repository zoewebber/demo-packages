    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "pinia": "^3.0.3",
    "sortablejs-vue3": "^1.3.0",
    "tailwind-merge": "^3.3.1",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
